{
  "extends": "@modern-js/tsconfig/base",
  "compilerOptions": {
    "declaration": false,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "strict": false,
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["./shared/*"]
    }
  },
  "include": ["src"],
  "exclude": ["**/node_modules", "**/.*/"]
}
